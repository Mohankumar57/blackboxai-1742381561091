NODE_ENV=development
PORT=5000

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/skill-management

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@bitsathy.ac.in
SMTP_PASS=your-email-password
EMAIL_FROM=Skill Management System <noreply@bitsathy.ac.in>

# Client URL (for CORS and callbacks)
CLIENT_URL=http://localhost:3000

# Allowed Email Domain
ALLOWED_EMAIL_DOMAIN=bitsathy.ac.in
